<p id="notice"><%= notice %></p>

<h1>Guest Lists</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Rsvp</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guest_lists.each do |guest_list| %>
      <tr>
        <td><%= guest_list.first_name %></td>
        <td><%= guest_list.last_name %></td>
        <td><%= guest_list.rsvp %></td>
        <td><%= guest_list.address %></td>
        <td><%= guest_list.phone %></td>
        <td><%= guest_list.customer %></td>
        <td><%= link_to 'Show', guest_list %></td>
        <td><%= link_to 'Edit', edit_guest_list_path(guest_list) %></td>
        <td><%= link_to 'Destroy', guest_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

